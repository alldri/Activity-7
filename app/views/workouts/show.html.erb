<%= form_tag "/workouts/find" do %>
<%= text_field_tag :search_string %>
<%= submit_tag :search %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Client:</strong>
  <%= @workout.client.name %>
</p>

<p>
  <strong>Trainer:</strong>
  <%= @workout.trainer.name %>
</p>

<p>
  <strong>Duration mins:</strong>
  <%= @workout.duration_mins %>
</p>

<p>
  <strong>Date of workout:</strong>
  <%= @workout.date_of_workout %>
</p>

<p>
  <strong>Paid amount:</strong>
  <%= @workout.paid_amount %>
</p>

<%= link_to 'Edit', edit_workout_path(@workout) %> |
<%= link_to 'Back', workouts_path %>
